name:                  khan
version:               0.1.0
synopsis:              Opinionated Provisioning
homepage:              http://github.com/brendanhay/khan
license:               OtherLicense
license-file:          LICENSE
author:                Brendan Hay
maintainer:            Brendan Hay <brendan.g.hay@gmail.com>
copyright:             Copyright (c) 2013 Brendan Hay
stability:             Experimental
category:              AWS, Cloud, Infrastructure
build-type:            Simple
cabal-version:         >= 1.10

description:
    Pending

extra-source-files:
    README.md

data-files:
      config/policy.json
    , config/trust.json
    , config/haproxy.ede

source-repository head
    type:     git
    location: git://github.com/brendanhay/khan.git

executable khan
    default-language:  Haskell2010
    hs-source-dirs:    src
    main-is:           Main.hs

    ghc-options:       -Wall -rtsopts -threaded -O2

    build-depends:
        aeson
      , aeson-pretty
      , amazonka
      , async
      , attoparsec
      , base                 >= 4.6 && < 5
      , bytestring
      , conduit
      , containers
      , directory
      , ed-e
      , errors
      , hslogger
      , http-conduit
      , http-types
      , mtl
      , optparse-applicative
      , prelude-prime
      , pretty-show
      , random
      , semigroups
      , shelly
      , system-filepath
      , text
      , text-format
      , time
      , transformers
      , unix
      , unordered-containers
